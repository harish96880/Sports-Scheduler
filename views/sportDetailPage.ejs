      <div class="flex" style="display: flex; flex-direction: row">
        <h1
          style="font-family: sans-serif; margin: 15px; font-size: 4vw"
          class="nameOfSport"
        >
          <%= name%>
        </h1>
        <button class="btn btn-primary editOptBtns" onclick="showUpdateOpt()">
          Edit
        </button>
        <script>
          function showUpdateOpt() {
            document.getElementById("sportEditContainer").style.display =
              "block";
          }
        </script>
        <a
          class="btn btn-success editOptBtns"
          style="width: 6%"
          onclick="showCreateSessionCard()"
          >New +
        </a>
        <script>
          function showCreateSessionCard() {
            document.getElementById("formSignupContainer").style.display =
              "block";
          }
        </script>
        <script>
          const anchors = document.querySelectorAll("a.anchorPrimary");
          anchors.forEach((anchor) => {
            anchor.addEventListener("click", function (event) {
              event.preventDefault(); // prevent the default behavior of clicking an anchor tag
              const text = document.querySelector("h1.nameOfSport").innerText;
              const url = "/Sports/" + encodeURIComponent(text) + "/NewSession";
              this.setAttribute("href", url);
              window.location.href = url;
            });
          });
        </script>
      </div>
      <h1
        style="
          font-family: sans-serif;
          margin: 0px;
          color: rgb(192, 191, 191);
          font-size: 2vw;
        "
      >
        Upcoming <span style="color: orange">Sessions</span>
      </h1>
      <div class="grid">
        <% getSportName.forEach(function(user, index) { if (user.session >=
        getDate) { %>
        <div
          class="card w-100 mx-5 my-3"
          style="height: 10vh; text-align: center; cursor: pointer"
        >
          <div class="block" onclick="" style="color: transparent">
            <%= user.id %>
          </div>
          <p
            class="w-100"
            style="
              padding: 10px;
              height: 10vh;
              display: flex;
              align-items: center;
              color: black;
              font-size: 1.6vw;
              font-weight: 300;
              font-family: sans-serif;
            "
          >
            <%= user.session %> @
            <span style="color: rgb(71, 71, 71)"><%= user.time %></span>
            <span
              style="
                float: right;
                color: rgb(0, 72, 255);
                padding-left: 90px;
                font-size: 24px;
              "
              ><%= user.availablePlayers %> slots</span
            >
          </p>
        </div>
        <% }}); %>
        <script>
          const sessionPage = document.querySelectorAll("div.block");
          sessionPage.forEach((anchor) => {
            anchor.addEventListener("click", function (event) {
              event.preventDefault();
              const text = document.querySelector("h1.nameOfSport").innerText;
              const id = this.innerText;
              const url =
                "/Sports/" +
                encodeURIComponent(text) +
                "/sessionDetail/" +
                encodeURIComponent(id);
              this.setAttribute("onclick", `window.location.href='${url}'`);
              window.location.href = url;
            });
          });
        </script>
      </div>
