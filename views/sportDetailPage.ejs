      <div class="container formLogin shadow-lg" id="formSignupContainer">
        <form action="" method="post">
          <h1
            align="center"
            class="my-3"
            style="color: rgb(241, 157, 0); font-family: sans-serif"
          >
            New Session
          </h1>
          <svg
            onclick="closeFormSignupOld()"
            style="
              position: absolute;
              top: 0%;
              left: 100%;
              color: white;
              background-color: red;
              border-radius: 32px;
              border: none;
            "
            id="closeSvg"
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            fill="currentColor"
            class="bi bi-x-circle"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
            />
            <path
              d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
            />
          </svg>
          <script>
            function closeFormSignupOld() {
              document.getElementById("formSignupContainer").style.display =
                "none";
            }
          </script>
          <hr />
          <center>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input
              type="date"
              name="session"
              placeholder="Enter the session date"
              id=""
              class="loginInput p-3"
              required
            />
            <input
              type="time"
              name="time"
              placeholder="time"
              id=""
              class="loginInput p-3"
              required
            />
            <input
              type="text"
              name="Address"
              placeholder="where the session will be held"
              id=""
              class="loginInput p-3"
              required
            />
            <input
              type="hidden"
              class="loginInput p-3"
              placeholder="who all are participating"
              name="userId"
              id=""
              value="<%= UserId%>"
              required
            /><br />
            <input
              type="hidden"
              class="loginInput p-3"
              placeholder="who all are participating"
              name="players"
              id=""
              required
            />
            <input
              type="number"
              placeholder="how many players do you need"
              class="loginInput p-3"
              name="numberOfPlayers"
              id=""
              required
            /><br />
            <input
              type="checkbox"
              name=""
              id=""
              class="my-3 mx-3"
              required
            /><label class="my-3 text-dark"
              >I agree to create this session</label
            ><br />
            <button
              type="submit"
              class="btn w-50"
              style="
                background-color: orange;
                color: white;
                font-weight: 600;
                font-size: 1.7vw;
              "
            >
              Create
            </button>
            <br /><br />
          </center>
        </form>
      </div>
      <div class="container sportEdit shadow-lg" id="sportEditContainer">
        <form action="/updateSport" method="post">
          <h3
            align="center"
            class="my-3"
            style="color: rgb(241, 157, 0); font-family: sans-serif"
          >
            Update Sport name for <span id="demo" class="text-dark"></span>
          </h3>
          <script>
            const sportName =
              document.querySelector("h1.nameOfSport").innerText;
            document.getElementById("demo").innerHTML = sportName;
          </script>
          <svg
            onclick="closeFormSignup()"
            style="
              position: absolute;
              top: 0%;
              left: 100%;
              color: white;
              background-color: red;
              border-radius: 32px;
              border: none;
              cursor: pointer;
            "
            id="closeSvg"
            xmlns="http://www.w3.org/2000/svg"
            width="26"
            height="26"
            fill="currentColor"
            class="bi bi-x-circle"
            viewBox="0 0 16 16"
          >
            <path
              d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
            />
            <path
              d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
            />
          </svg>
          <script>
            function closeFormSignup() {
              document.getElementById("sportEditContainer").style.display =
                "none";
            }
          </script>
          <hr />
          <center>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <input
              type="hidden"
              name="Check_Sports_Name"
              placeholder="Enter existing name"
              value="<%= name%>"
              id=""
              class="loginInput p-3"
              required
            />
            <input
              type="text"
              name="Sports_Name_Update"
              placeholder="Enter new name"
              id=""
              class="loginInput p-3"
              required
            />
            <br /><br />
            <button
              type="submit"
              class="btn w-50"
              style="
                background-color: orange;
                color: white;
                font-weight: 600;
                font-size: 1vw;
              "
            >
              Update
            </button>
            <br /><br />
          </center>
        </form>
