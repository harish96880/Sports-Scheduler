    <div class="container formLogin shadow-lg" id="formContainer">
      <form action="/session" method="post">
        <h1
          align="center"
          class="my-3"
          style="color: rgb(255, 166, 0); font-family: Pacifico"
        >
          Login
        </h1>
        <svg
          onclick="closeForm()"
          style="
            position: absolute;
            top: 0%;
            left: 100%;
            color: white;
            background-color: red;
            border-radius: 32px;
            border: none;
          "
          id="closeSvg"
          xmlns="http://www.w3.org/2000/svg"
          width="26"
          height="26"
          fill="currentColor"
          class="bi bi-x-circle"
          viewBox="0 0 16 16"
        >
          <path
            d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"
          />
          <path
            d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"
          />
        </svg>
        <script>
          function closeForm() {
            document.getElementById("home").style.background =
              "linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 1)),url('./bg1.jpg')";
            document.getElementById("home").style.backgroundSize = "cover";
            document.getElementById("home").style.backgroundPosition = "center";
            document.getElementById("home").style.transition = "1s";
            document.getElementById("formContainer").style.display = "none";
          }
        </script>
        <hr />
        <center>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <input
            type="email"
            class="loginInput p-3"
            placeholder="Enter your email"
            name="email"
            id=""
          /><br />
          <input
            type="password"
            placeholder="password"
            class="loginInput p-3"
            name="password"
            id=""
          /><br /><br />
          <button
            type="submit"
            class="btn w-50"
            style="
              background-color: orange;
              color: white;
              font-weight: 600;
              font-size: 1.7vw;
            "
          >
            Login
          </button>
          <br /><br />
          <label
            >Don't have an account?
            <a href="#" onclick="SignUp()">Sign up</a></label
          >
          <script>
            function SignUp() {
              document.getElementById("formContainer").style.display = "none";
              document.getElementById("formSignupContainer").style.display =
                "block";
            }
          </script>
        </center>
      </form>
    </div>
    <div class="container formLogin shadow-lg" id="formSignupContainer">
      <form action="/users" method="post">
        <h1
          align="center"
          class="my-3"
          style="color: rgb(255, 166, 0); font-family: Pacifico"
        >
          Signup
